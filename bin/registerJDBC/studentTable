CREATE TABLE STUDENT_TBL(
    STUDENT_ID      VARCHAR2(10) PRIMARY KEY,
    STUDENT_PW      VARCHAR2(10) NOT NULL,
    NAME            VARCHAR2(10) NOT NULL,
    SUBJECT_CODE    NUMBER REFERENCES SUBJECT_TBL(SUBJECT_CODE) ON DELETE SET NULL
);

DROP TABLE STUDENT_TBL;

COMMENT ON COLUMN STUDENT_TBL.STUDENT_ID IS '아이디';
COMMENT ON COLUMN STUDENT_TBL.STUDENT_PW IS '비밀번호';
COMMENT ON COLUMN STUDENT_TBL.NAME IS '이름';
COMMENT ON COLUMN STUDENT_TBL.SUBJECT_CODE IS '과목코드';

SELECT * FROM STUDENT_TBL;

COMMIT;

INSERT INTO STUDENT_TBL(STUDENT_ID, STUDENT_PW, NAME) VALUES('admin', 'admin', '관리자');